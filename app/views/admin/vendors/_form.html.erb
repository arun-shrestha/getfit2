<div class="col-sm-offset-3">
  <div class="col-sm-8">
    <div class="well">
      <%= simple_form_for [:admin, @vendor], html: { class: 'form-group form-horizontal' },
      wrapper: :horizontal_form,
      wrapper_mappings: {
        file: :horizontal_file_input,
        input: :input_wrapper
        } do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, placeholder: 'Store name' %>
        <%= f.input :owner_name, placeholder: 'Owner name' %>
        <%= f.input :image, as: :file, label: 'Store Banner' %>
        <%= f.input :avatar, as: :file, label: 'Store Avatar' %>
        <%= f.input :tagline, placeholder: 'eg. Handmade beaded jewelry, Handmade book bindings, etc. ' %>
        <%= f.input :description, placeholder: 'Short description' %>
        <%= f.input :email_biz, placeholder: 'Sales Email' %>
        <%= f.input :email_finance, placeholder: 'Finance Email' %>
        <%= f.input :address, placeholder: 'Address' %>
        <%= f.input :city, placeholder: 'City' %>
        <%= f.input :state, placeholder: 'State' %>
        <%= f.input :zipcode, placeholder: 'Zip code' %>
        <%= f.input :country %>
        <%= f.input :phone, placeholder: 'Phone' %>
        <%= f.input :is_vendor?, :as => :hidden, :input_html => { :value => true } %>

        <% if params[:action] == 'new' %>
        <%= f.button :submit, "Submit Profile", class: "btn btn-primary" %>
        <% else %>
        <%= f.button :submit, "Update Profile", class: "btn btn-primary" %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
